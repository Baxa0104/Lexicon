extends layout

block content
    .container.d-flex.flex-column.align-items-center(style="max-width: 1000px; width: 100%; padding: 0px;")

        // Ride Details Section (Card with Image on the Left)
        .card.shadow-sm.bg-white.rounded.p-4.mb-4.w-100
            .row.g-4
                // Ride Image Section on Left (No Stretching, Properly Resized)
                .col-md-4.d-flex.align-items-center
                    if ride.ride_pics
                        img.shadow-sm(
                            src=ride.ride_pics, 
                            alt="Ride Image", 
                            class="img-fluid rounded", 
                            style="height: 200px; width: 100%; object-fit: cover;"
                        )
                    else
                        div.bg-light.d-flex.align-items-center.justify-content-center.shadow-sm(
                            style="height: 200px; width: 100%;"
                        )
                            i.bi.bi-car-front.display-1.text-secondary

                // Ride Info Section on Right
                .col-md-8
                    h2.text-primary.mb-3 #{ride.short_name} ðŸš—
                    p.text-muted.mb-4 #{ride.ride_details || "No description available"} 

                    hr

                    .row.g-3
                        .col-md-6
                            p.mb-2 
                                strong Origin Address:  
                                | #{ride.origin_address} ðŸ 
                        .col-md-6
                            p.mb-2 
                                strong Destination Address:  
                                | #{ride.destination_address} ðŸ–ï¸
                    .row.g-3
                        .col-md-6
                            p.mb-2 
                                strong Date & Time:  
                                | #{ride.departure_date} & #{ride.departure_time} ðŸ•’
                        .col-md-6
                            p.mb-2 
                                strong Available Seats:  
                                | #{ride.available_seats} ðŸª‘

                    // Driver Details
                    .mt-4
                        p.mb-2 
                            strong Driver Name:  
                            | #{ride.user_name} ðŸ‘¤
                        p.mb-2 
                            strong Phone:  
                            | #{ride.phone_number || "N/A"} ðŸ“ž
                        p.mb-2 
                            strong Email:  
                            | #{ride.email} ðŸ“§

                    // Action Buttons (No Justify Content)
                    .d-flex.mt-4.flex-wrap.gap-3
                        if ride.available_seats > 0
                            form(action=`/book/${ride.ride_id}`, method="POST")
                                button.btn.btn-success(type="submit") ðŸ“… Book Ride
                        else
                            button.btn.btn-danger(type="button", onclick="showNoSeatsPopup()") ðŸš« No Seats Available
                        a.btn.btn-info(href=`/social/${ride.user_id}`) ðŸ’¬ Contact Driver

        // No Ride Found Message
        if !ride
            .container.rounded.bg-light.p-4.shadow-sm.text-center
                p No ride details found. ðŸ˜”

    // Modal for No Seats Available
    div#noSeatsModal.modal.fade(tabindex="-1" aria-labelledby="noSeatsModalLabel" aria-hidden="true")
        .modal-dialog
            .modal-content
                .modal-header
                    h5#noSeatsModalLabel.modal-title ðŸš« No Seats Available
                    button.btn-close(type="button", data-bs-dismiss="modal", aria-label="Close")
                .modal-body
                    p Sorry, this ride is fully booked! Please check other rides or try again later.
                .modal-footer
                    button.btn.btn-secondary(type="button", data-bs-dismiss="modal") Close

    // Script to Show the Modal
    script.
        function showNoSeatsPopup() {
            var modal = new bootstrap.Modal(document.getElementById('noSeatsModal'));
            modal.show();
        }
