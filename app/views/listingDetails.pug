extends layout

block content
    .container.d-flex.flex-column.align-items-center(style="max-width: 1000px; width: 100%;")

        // Ride Details Section (Full Width)
        .card.shadow-lg.bg-white.rounded.p-4.mb-4.w-100
            .row.g-4
                // Ride Image Section
                .col-md-4.d-flex.flex-column.align-items-center
                    if ride.ride_pics
                        img.shadow-sm(
                            src=ride.ride_pics, 
                            alt="Ride Image", 
                            class="img-fluid rounded", 
                            style="height: 200px; width: 100%; object-fit: cover;"
                        )
                    else
                        div.bg-light.d-flex.align-items-center.justify-content-center.shadow-sm(
                            style="height: 200px; width: 100%;"
                        )
                            i.bi.bi-car-front.display-1.text-secondary

                // Ride Info Section
                .col-md-8
                    h2.text-primary #{ride.short_name}
                    p.text-muted #{ride.ride_details || "No description available"}

                    hr

                    .row
                        .col-md-6
                            p.mb-2 
                                strong Origin Address:  
                                | #{ride.origin_address}
                            p.mb-2 
                                strong Destination Address:  
                                | #{ride.destination_address}
                        .col-md-6
                            p.mb-2 
                                strong Date & Time:  
                                | #{ride.departure_date} & #{ride.departure_time}
                            p.mb-2 
                                strong Available Seats:  
                                | #{ride.available_seats}

                    // Driver Details
                    .mt-3
                        p.mb-2 
                            strong Driver Name:  
                            | #{ride.user_name}
                        p.mb-2 
                            strong Phone:  
                            | #{ride.phone_number || "N/A"}
                        p.mb-2 
                            strong Email:  
                            | #{ride.email}

                    // Action Buttons (Centered)
                    .d-flex.mt-4.flex-wrap.gap-2
                        a.btn.btn-success.disabled(href=`/book/#{ride.id}`) Book Ride

        // No Ride Found Message
        if !ride
            .container.rounded.bg-light.p-4.shadow-sm.text-center
                p No ride details found.
