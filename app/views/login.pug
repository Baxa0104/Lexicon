extends formsLayout

block content
  .container(style="max-width: 500px;")
    .card.shadow-sm.mt-5
      .card-body
        h2.card-title.text-center.mb-4.text-primary Login
        if error.length
          .alert.alert-danger= error
        if success.length
          .alert.alert-success= success
        
        form(method="POST" action="/login")
          .mb-3
            label.form-label Email
            input.form-control(type="email" name="email" required)
          .mb-3
            label.form-label Password
            input.form-control(type="password" name="password" required)
          button.btn.btn-primary.w-100(type="submit") Login
        
        .mt-3.text-center
          | Don't have an account? 
          a(href="/register") Register here