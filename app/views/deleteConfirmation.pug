extends formsLayout

block content
    .container.d-flex.flex-column.align-items-center(style="max-width: 1000px; width: 100%; padding: 0px;")
        .card.shadow-sm.bg-white.rounded.p-4.mb-4.w-100
            h2.text-danger Delete Account
            p.text-muted.small Please confirm that you want to delete. This action cannot be undone.

            form(method="POST" action="/account/delete")
                .d-flex.justify-content-between
                    button.btn.btn-danger(type="submit") Yes, Delete My Account
                    a.btn.btn-secondary(href=`/social/${userSession.id}`) No, Go Back
