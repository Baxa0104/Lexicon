extends layout

block content
    .container
        h2 Edit Profile
        if error.length
          .alert.alert-danger= error
        if success.length
          .alert.alert-success= success
        form(action="/account/edit/profile" method="POST")
            .form-group
                label(for="username") Username
                input.form-control(type="text" name="username" value=user.user_name required)
            
            .form-group
                label(for="bio") Bio
                textarea.form-control(name="bio")= user.bio || ''
            
            .form-group
                label(for="phone_number") Phone Number
                input.form-control(type="tel" name="phone_number" value=user.phone_number || '')
            
            .form-group
                label(for="address") Address
                input.form-control(type="text" name="address" value=user.address || '')
            
            button.btn.btn-primary(type="submit") Update Profile
