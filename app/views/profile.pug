extends layout

block content
    .container.d-flex.flex-column.align-items-center(style="max-width: 1000px; width: 100%; padding: 0px;")

        // User Profile Section (Full Width)
        .card.shadow-sm.bg-white.rounded.p-4.mb-4.w-100
            .row.g-4
                // Profile Image + Button
                .col-md-4.d-flex.flex-column.align-items-center
                    if user.profile_pic
                        img.shadow-sm(
                            src=user.profile_pic, 
                            alt="Profile Picture", 
                            class="img-fluid rounded", 
                            style="height: 180px; width: 100%; object-fit: cover;"
                        )
                    else
                        div.bg-light.d-flex.align-items-center.justify-content-center.shadow-sm(
                            style="height: 180px; width: 100%;"
                        )
                            i.bi.bi-person-circle.display-1.text-secondary

                    // Change Picture Button
                    if user.user_id === userSession.id
                        a.btn.btn-outline-primary.btn-sm.mt-3(href="/account/change-picture") Change Picture

                // User Info
                .col-md-8
                    h2.text-primary #{user.user_name}
                    p.text-muted Bio: #{user.bio || "No bio available"}

                    hr

                    .row
                        .col-md-6
                            p.mb-2 
                                strong Email:  
                                | #{user.email}
                            p.mb-2 
                                strong Phone:  
                                | #{user.phone_number || "N/A"}
                        .col-md-6
                            p.mb-2 
                                strong Address:  
                                | #{user.address || "N/A"}
                            p.mb-2 
                                strong Role:  
                                | #{user.role}

                    // Action Buttons (Spaced Properly)
                    .d-flex.mt-4.flex-wrap.gap-2
                        if user.user_id === userSession.id
                            a.btn.btn-primary(href="/account/edit") Edit Profile
                            a.btn.btn-secondary(href="/account/edit-password") Change Password
        
        if user.user_id === userSession.id
            // Danger Zone Section (Now Fully Expanded)
            .card.shadow-sm.bg-white.rounded.p-4.border-danger.w-100
                h4.text-danger Danger Zone
                p.text-muted Be careful with these actions.

                hr

                // Change to Driver Status Section
                .mb-4
                    if user.role !== "Driver"
                        strong.text-warning Become a Driver
                        p.text-muted.small To become a driver, upload your driverâ€™s license for verification.  
                        a.btn.btn-outline-warning.w-100(href="/account/upgrade-to-driver") Change to Driver Status
                    else
                        strong.text-warning Become a Passenger
                        p.text-muted.small You are currently a driver. You can switch back to passenger mode anytime.
                        a.btn.btn-outline-warning.w-100(href="/account/revert-to-passenger") Switch to Passenger

                hr

                // Delete Account Section (Fully Spaced & Structured)
                .mb-1
                    div
                        strong.text-danger Delete Account
                        p.text-muted.small Once deleted, there is no going back. Please be certain.
                        a.btn.btn-outline-danger.w-100(href="/account/delete") Delete Account
